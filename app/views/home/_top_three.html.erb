<div class="row">
	<div class="large-8 medium-11 small-11">
	<ol class="circle-list">
	<% @top_three.each_with_index do |article, i| %>
		<li>
			<h3><%= link_to article.title, article.url, :target => "_blank" %></h3>
		  	<%= article.body.present? ? article.body : 'No body' %>
		  	<%= image_tag "screenshots/screenshot-#{i}.png", :width => 200, :class => "th radius" %>
		</li>
	<% end %>            
	</ol>
	</div>
</div>