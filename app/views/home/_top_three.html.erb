<!-- Three Content Blocks -->
<div class="row">
	<div class="twelve columns text-center"><br />
        <h2>Hottest 3 <small>of the day</small></h2>
    </div>
    <% [@first, @second, @third].each_with_index do |article, i| %>
    <div class="large-4 columns">
