<table>
	<thead>
		<tr>
			<th><%= sortable 'title' %></th>
			<th><%= sortable 'source' %></th>
		</tr>
	</thead>
	<tbody>
	<% articles.each do |article| %>
		<tr>
			<td>
				<%= link_to "#{article.title}", article.url, :target => "_blank" %>
			</td>
			<td><%= article.source %></td>
		</tr>
	<% end %>
	</tbody>
</table>