<%= sortable 'title' %>
<%= sortable 'source' %>

<ol class="rounded-list">
	<!-- Nesting is also possible here:
	<ol>
	 	<li><a href="">List sub item</a></li>
	  <li><a href="">List sub item</a></li>
	  <li><a href="">List sub item</a></li>
  </ol>
	-->
	<% articles.each do |article| %>
	<li>
		<div class="enumerate">
			<%= link_to article.title, article.url, :target => "_blank" %>
			<%= content_tag(:span, article.source) %>
		</div>
		<div class="bounce-summary">
			Summary goes in here
		</div>
	</li>
	<% end %>
</ol>
