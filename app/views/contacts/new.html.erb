<% title 'Contact' %>
<div class="row">
  <div class="large-6 medium-6 columns">
  	<%= render 'common/messages' %>
  	<%= form_for @contact do |f| %>
  		<p>
		    <%= f.label :name %><br>
		    <%= f.text_field :name %>
		  </p>
		  <p>
		    <%= f.label :email %><br>
		    <%= f.text_field :email %>
		  </p>
		  <p>
		    <%= f.label :message %><br>
		    <%= f.text_area :message, :rows => "10" %>
		  </p>
		  <p>
		  	<%= f.submit "Send", :class => "button radius" %>
			</p>
		<% end %>
  </div>
  <div class="large-6 medium-6 columns">
  </div>
</div>
